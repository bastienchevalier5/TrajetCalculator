@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime


<div class="page">
    <div class="bg-primary m-3 p-4 draggable" style="width:400px; height:400px; border-radius:20px" id="draggableDiv">
        <InputMenu />
    </div>

    <main>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("makeDraggable", "draggableDiv");
        }
    }
}